generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int        @id
  username    String
  status      Int
  displayName String
  ipAddress   String
  timezone    String
  lastVersion String
  changePw    Boolean
  UserRole    UserRole[]
}

model UserRole {
  user   User @relation(fields: [userId], references: [id])
  userId Int
  role   Role @relation(fields: [roleId], references: [id])
  roleId Int

  @@id([userId, roleId])
}

model Role {
  id       Int        @id
  name     String
  UserRole UserRole[]
}
